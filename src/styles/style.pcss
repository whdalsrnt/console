/* Tailwind CSS */
@tailwind base;
@tailwind components;
@tailwind utilities;

html:lang(ko), body:lang(ko) {
    font-family: Noto Sans KR, Noto Sans, Roboto, sans-serif;
}

html:lang(en), body:lang(en) {
    font-family: Noto Sans, Roboto, sans-serif;
}

html:lang(jp), body:lang(jp) {
    font-family: Noto Sans JP, Noto Sans, Roboto, sans-serif;
}
